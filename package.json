{
  "name": "reuni-react",
  "version": "0.1.0-alpha.1",
  "description": "Dynamic state container for JavaScript apps",
  "scripts": {
    "prettier": "prettier --write \"**/*.js\" \"**/*.jsx\" \"**/*.tsx\" \"**/*.ts\"",
    "build": "node scripts/build.js",
    "test": "yarn jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hapood/reuni-react.git"
  },
  "keywords": [
    "reuni",
    "reuni-react",
    "immutable",
    "observable",
    "react",
    "reactjs"
  ],
  "author": "Hapood Wang",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hapood/reuni-react/issues"
  },
  "homepage": "https://github.com/hapood/reuni-react#readme",
  "dependencies": {
    "prop-types": "^15.6.0",
    "reuni": "^0.1.0-alpha.2"
  },
  "devDependencies": {
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.0.34",
    "prettier": "^1.9.2",
    "react": "^16.2.0",
    "ts-loader": "^3.2.0",
    "typescript": "^2.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.test.(ts|js)"
    ],
    "moduleNameMapper": {
      "^src$": "<rootDir>/src/index.ts"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/__tests__/**"
    ]
  }
}
