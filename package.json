{
  "name": "reuni-react",
  "version": "0.1.0-beta.1",
  "description": "React bindings for Reuni",
  "scripts": {
    "prettier":
      "prettier --write \"**/*.js\" \"**/*.jsx\" \"**/*.tsx\" \"**/*.ts\"",
    "build": "node scripts/build.js",
    "test": "yarn jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hapood/reuni-react.git"
  },
  "keywords": [
    "reuni",
    "reuni-react",
    "immutable",
    "observable",
    "react",
    "reactjs"
  ],
  "author": "Hapood Wang",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hapood/reuni-react/issues"
  },
  "homepage": "https://github.com/hapood/reuni-react#readme",
  "peerDependencies": {
    "react": ">=16"
  },
  "dependencies": {
    "prop-types": "^15.6.0",
    "reuni": "^0.1.0-beta.1"
  },
  "devDependencies": {
    "@types/jest": "^22.1.3",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.0.38",
    "@types/react-test-renderer": "^16.0.1",
    "jest": "^22.3.0",
    "prettier": "^1.10.2",
    "react": "^16.2.0",
    "react-test-renderer": "^16.2.0",
    "rollup": "^0.56.2",
    "rollup-plugin-commonjs": "^8.3.0",
    "rollup-plugin-filesize": "^1.5.0",
    "rollup-plugin-node-resolve": "^3.0.3",
    "ts-jest": "^22.0.4",
    "ts-loader": "^3.5.0",
    "tslib": "^1.9.0",
    "typescript": "^2.7.2"
  },
  "jest": {
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": ["**/__tests__/*.test.(ts|tsx|js)"],
    "moduleNameMapper": {
      "^src$": "<rootDir>/src/index.ts"
    },
    "collectCoverageFrom": ["src/**/*.{js,ts,tsx}", "!src/**/__tests__/**"]
  }
}
