{
  "name": "reuni-react",
  "version": "0.1.0-alpha.1",
  "description": "Dynamic state container for JavaScript apps",
  "scripts": {
    "prettier": "prettier --write \"**/*.js\" \"**/*.jsx\" \"**/*.tsx\" \"**/*.ts\"",
    "build": "node scripts/build.js",
    "test": "yarn jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hapood/reuni-react.git"
  },
  "keywords": [
    "reuni",
    "reuni-react",
    "immutable",
    "observable",
    "react",
    "reactjs"
  ],
  "author": "Hapood Wang",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hapood/reuni-react/issues"
  },
  "homepage": "https://github.com/hapood/reuni-react#readme",
  "peerDependencies": {
    "prop-types": ">=15",
    "react": ">=16"
  },
  "dependencies": {
    "reuni": "^0.1.0-alpha.4"
  },
  "devDependencies": {
    "@types/jest": "^22.1.1",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.0.35",
    "@types/react-test-renderer": "^16.0.0",
    "jest": "^22.1.4",
    "prettier": "^1.10.2",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-test-renderer": "^16.2.0",
    "rollup": "^0.55.0",
    "rollup-plugin-commonjs": "^8.3.0",
    "rollup-plugin-filesize": "^1.5.0",
    "rollup-plugin-node-resolve": "^3.0.2",
    "ts-jest": "^22.0.2",
    "ts-loader": "^3.3.1",
    "tslib": "^1.9.0",
    "typescript": "^2.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.test.(ts|tsx|js)"
    ],
    "moduleNameMapper": {
      "^src$": "<rootDir>/src/index.ts"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts,tsx}",
      "!src/**/__tests__/**"
    ]
  }
}
